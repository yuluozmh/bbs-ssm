<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liang.dao.SliderMapper">
    <resultMap id="BaseResultMap" type="com.liang.bean.Slider">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="text" jdbcType="VARCHAR" property="text"/>
        <result column="text_url" jdbcType="VARCHAR" property="textUrl"/>
        <result column="image_url" jdbcType="VARCHAR" property="imageUrl"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, text, text_url, image_url, create_time
    </sql>

    <!-- 新增轮播图信息 -->
    <insert id="insert" parameterType="com.liang.bean.Slider">
        insert into slider(text, text_url, image_url, create_time)
        values (#{text,jdbcType=VARCHAR},
                #{textUrl,jdbcType=VARCHAR},
                #{imageUrl,jdbcType=VARCHAR},
                now())
    </insert>

    <!-- 按id删除轮播图信息 -->
    <delete id="deleteSlider" parameterType="java.lang.String">
        delete
        from slider
        where id = #{id,jdbcType=VARCHAR}
    </delete>

    <!-- 获取轮播图信息 -->
    <select id="selectSlider" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from slider
    </select>

</mapper>